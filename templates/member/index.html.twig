{% extends 'base.html.twig' %}

{% block title %}Member Home{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-2">
            <div class="col">
                <p class="fs-1">Welkom {{ app.user.fname }}</p>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <p class="fs-6">
                    Welkom op de member pagina.
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <p class="fs-6">
                    Jij bent de meester van {{ app.user.master }}
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <p class="h2">Mijn verhalen</p>
                <table class="table">
                    <thead>
                        <tr>
                        <th scope="col">Titel</th>
                        <th scope="col">Beschrijving</th>
                        <th scope="col">Datum</th>
                        <th scope="col">Update</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for story in stories %}
                            <tr>
                                <th scope="row">{{ story.title }}</th>
                                <td>{{ story.description }}</td>
                                <td>{{ story.date|date('d-m-Y') }}</td>
                                <td><a class="btn btn-warning" href="{{ path('app_member_update', {'id': story.id}) }}">Update</a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <a class="btn btn-success" href="{{ path('app_member_insert') }}">Verhaal toevoegen</a>
            </div>
        </div>
    </div>
{% endblock %}
